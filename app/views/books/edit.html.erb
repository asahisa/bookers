<h1>Editing Book</h1>

<%= form_with model: @book, url: update_book_path(@book.id), method: :patch,
  id: "edit-book", class: "edit-book" do |f| %>

  <div class="field">
    <%= f.label :title, "Title" %>
    <%= f.text_field :title, class: "book_title" %>
  </div>

  <div class="field">
    <%= f.label :body, "Body" %>
    <%= f.text_area :body, class: "book_body" %>
  </div>

  <div class="actions">
    <%= f.submit "Update Book" %>
  </div>

<% end %>

<%= link_to "show", book_path(@book.id) %>
|
<%= link_to "Back", "/books" %>