<p id="notice"><%= flash[:notice] %></p>
<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan = "3"></th>
    </tr>
  </thead>
  
  <% @books.each do |books_list| %>
    <tr>
      <td><%= books_list.title %></td>
      <td><%= books_list.body %></td>
      <td><%= link_to "Show", book_path(books_list.id) %></td>
      <td><%= link_to "Edit", edit_book_path(books_list.id) %></td>
      <td><%= link_to "Destroy", "books/#{books_list.id}", method: :delete,
      "data-confirm" => "Are you sure?" %></td>
    </tr>
  <% end %>

</table>

<h2>New book</h2>

<%= form_with model: @book, id: "new-book", class: "new-book" do |f| %>

  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <div class="field_with_errors">
    <%= f.label :title, "Title" %>
    </div>

    <div class="field_with_errors">
    <%= f.text_field :title, class: "book_title" %>
    </div>
  </div>

  <div class="field">
    <div class="field_with_errors">
    <%= f.label :body, "Body" %>
    </div>

    <div class="field_with_errors">
    <%= f.text_area :body, class: "book_body" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Create Book" %>
  </div>

<% end %>