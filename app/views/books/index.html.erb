<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan = "3"></th>
    </tr>
  </thead>
  
  <% @books.each do |book_list| %>
    <tr>
      <td><%= book_list.title %></td>
      <td><%= book_list.body %></td>
      <td><%= link_to "Show", book_path(book_list.id) %></td>
      <td><%= link_to "Edit", edit_book_path(book_list.id) %></td>
      <td>Destroy</td>
    </tr>
  <% end %>

</table>

<h2>New book</h2>
<%= form_with model: @book, id: "new-book", class: "new-book" do |f| %>
  <div class="field">
    <%= f.label :title, "Title" %>
    <%= f.text_field :title, class: "book_title" %>
  </div>

  <div class="field">
    <%= f.label :body, "Body" %>
    <%= f.text_area :body, class: "book_body" %>
  </div>

  <div class="actions">
    <%= f.submit "Create Book" %>
  </div>

<% end %>