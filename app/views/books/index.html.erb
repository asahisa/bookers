<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan = "3"></th>
    </tr>
  </thead>
  
  <tbody>
    <tr>
      <td>リーダブルコード</td>
      <td>よりよいコードを書くためのシンプルで実践的なテクニック</td>
      <td>Show</td>
      <td>Edit</td>
      <td>Destroy</td>
    </tr>
    
  </tbody>
</table>

<h2>New book</h2>
<%= form_with model: @list, id: "new-book", class: "new-book" do |f| %>
  <div class="field">
    <%= f.label :book_title, "Title" %>
    <%= f.text_field :book, class: "book_title" %>
  </div>

  <div class="field">
    <%= f.label :book_body, "Body" %>
    <%= f.text_area :book_body, class: "book_body" %>
  </div>

  <div class="actions">
    <%= f.submit "Create Book" %>
  </div>
  
<% end %>